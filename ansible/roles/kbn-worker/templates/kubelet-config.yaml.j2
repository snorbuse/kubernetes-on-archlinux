kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "/var/lib/kubernetes/rootCA.pem"
authorization:
  mode: Webhook
clusterDomain: "cluster.local"
clusterDNS:
  - "10.32.0.10"
podCIDR: "66.1.1.1/8"
resolvConf: "/run/systemd/resolve/resolv.conf"
runtimeRequestTimeout: "15m"
tlsCertFile: "/var/lib/kubernetes/kubelet-{{ ansible_default_ipv4.address }}.pem"
tlsPrivateKeyFile: "/var/lib/kubernetes/kubelet-{{ ansible_default_ipv4.address }}-key.pem"
