[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-apiserver \
  --advertise-address={{ ansible_default_ipv4.address }}  \
  --allow-privileged=true \
  --apiserver-count=3 \
  --audit-log-maxage=30 \
  --audit-log-maxbackup=3 \
  --audit-log-maxsize=100 \
  --audit-log-path=/var/log/audit.log \
  --authorization-mode=Node,RBAC \
  --bind-address=0.0.0.0 \
  --client-ca-file=/var/lib/kubernetes/rootCA.pem \
  --enable-admission-plugins=Initializers,NamespaceLifecycle,NodeRestriction,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota \
  --enable-swagger-ui=true \
  --etcd-cafile=/var/lib/kubernetes/rootCA.pem \
  --etcd-certfile=/var/lib/kubernetes/apiserver-{{ ansible_default_ipv4.address }}.pem \
  --etcd-keyfile=/var/lib/kubernetes/apiserver-{{ ansible_default_ipv4.address }}-key.pem \
  --etcd-servers={% for host in groups['master'] %}https://{{ hostvars[host].ansible_default_ipv4.address }}:2379,{% endfor %} \
  --event-ttl=1h \
  --experimental-encryption-provider-config=/var/lib/kubernetes/encryption-config.yaml \
  --kubelet-certificate-authority=/var/lib/kubernetes/rootCA.pem \
  --kubelet-client-certificate=/var/lib/kubernetes/apiserver-{{ ansible_default_ipv4.address }}.pem \
  --kubelet-client-key=/var/lib/kubernetes/apiserver-{{ ansible_default_ipv4.address }}-key.pem \
  --kubelet-https=true \
  --runtime-config=api/all \
  --service-account-key-file=/var/lib/kubernetes/serviceaccount.pem \
  --service-cluster-ip-range=10.32.0.0/24 \
  --service-node-port-range=30000-32767 \
  --tls-cert-file=/var/lib/kubernetes/apiserver-{{ ansible_default_ipv4.address }}.pem \
  --tls-private-key-file=/var/lib/kubernetes/apiserver-{{ ansible_default_ipv4.address }}-key.pem \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
